{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Routes": [
    {
      "DownStreamPathTemplate": "/api/VehicleStatuses",
      "DownStreamScheme": "http",
      "DownStreamHostAndPorts": [
        {
          "Host": "vehicleapi",
          "Port": "80"
        }
      ],
      "UpStreamPathTemplate": "/gateway/VehicleStatuses",
      "UpStreamHttpMethod": [ "GET" ]
    },
    {
      "DownStreamPathTemplate": "/api/Vehicles",
      "DownStreamScheme": "http",
      "DownStreamHostAndPorts": [
        {
          "Host": "vehicleapi",
          "Port": "80"
        }
      ],
      "UpStreamPathTemplate": "/gateway/vehicles",
      "UpStreamHttpMethod": [ "GET", "POST" ]
    },
    {
      "DownStreamPathTemplate": "/api/Vehicles/{id}",
      "DownStreamScheme": "http",
      "DownStreamHostAndPorts": [
        {
          "Host": "vehicleapi",
          "Port": "80"
        }
      ],
      "UpStreamPathTemplate": "/gateway/vehicles/{id}",
      "UpStreamHttpMethod": [ "GET", "PUT", "DELETE" ]
    },

    {
      "DownStreamPathTemplate": "/api/Customers",
      "DownStreamScheme": "http",
      "DownStreamHostAndPorts": [
        {
          "Host": "customerapi",
          "Port": "80"
        }
      ],
      "UpStreamPathTemplate": "/gateway/customers",
      "UpStreamHttpMethod": [ "GET", "POST" ]
    },
    {
      "DownStreamPathTemplate": "/api/Customers/{id}",
      "DownStreamScheme": "http",
      "DownStreamHostAndPorts": [
        {
          "Host": "customerapi",
          "Port": "80"
        }
      ],
      "UpStreamPathTemplate": "/gateway/customers/{id}",
      "UpStreamHttpMethod": [ "GET", "PUT" ]
    },
    {
      "DownStreamPathTemplate": "/api/VehiclePing",
      "DownStreamScheme": "http",
      "DownStreamHostAndPorts": [
        {
          "Host": "trackingapi",
          "Port": "80"
        }
      ],
      "UpStreamPathTemplate": "/gateway/VehiclePing",
      "UpStreamHttpMethod": [ "POST" ]
    }

  ]
}
